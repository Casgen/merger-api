{
	"configurations": {
		"run": {
			"adapter": "vscode-node",
			"configuration": {
				"request": "launch",
				"type": "node",
				"console": "integratedTerminal",
				"runtimeExecutable": "npm",
				"runtimeArgs": [
					"run",
					"dev:nodemon-debug"
				],
				"sourceMaps": true,
				"port": 9229
			}
		},
		"attach": {
			"adapter": "vscode-node",
			"configuration": {
			    "name": "Nodemon: Attach",
			    "request": "attach",
				"port": 9229,
			    "skipFiles": [
				"<node_internals>/**"
			    ],
				"restart":true,
			    "type": "node",
				"protocol": "inspector"
			},
		}
	}
}
